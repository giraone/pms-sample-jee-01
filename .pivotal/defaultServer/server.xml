			serverName='${cloud.services.pmssamplejee1sqldb.connection.host}' user='${cloud.services.pmssamplejee1sqldb.connection.username}' />
	</dataSource>

	<jdbcDriver id='postgresql-driver' libraryRef='postgresql-library'>  
		<library id='postgresql-library'>
			<fileset dir='${server.config.dir}/lib' id='postgresql-fileset' includes='postgresql-9.4-1204.jdbc42.jar'/>   
		</library>
	</jdbcDriver>
</server>

